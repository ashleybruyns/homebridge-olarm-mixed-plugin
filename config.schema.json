{
  "pluginAlias": "OlarmHomebridgeMixedPlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "My Olarm"
      },
      "apiKey": {
        "type": "string",
        "title": "API Key",
        "description": "The API key from your Olarm account. This is obtained at https://user.olarm.co/#/api."
      },
      "pollingInterval": {
        "type": "number",
        "title": "Polling Interval",
        "description": "Polling Interval for Occupancy Sensors in milliseconds",
        "default": 30000
      },
      "occupancyDelay": {
        "type": "number",
        "title": "Occupancy Delay",
        "description": "Occupancy Delay for Occupancy Sensors in milliseconds",
        "default": 300000
      },
      "ignoreAreas": {
        "type": "array",
        "title": "Areas to Ignore",
        "description": "Alarm areas to ignore",
        "items": {
          "type": "number",
          "required": [ "number" ]
        }
      },
      "occupancyZones": {
        "type": "array",
        "title": "Occupancy zones",
        "description": "Active Occupancy Sensors / Zones",
        "items": {
          "type": "number",
          "required": [ "number" ]
        }
      },
      "garageDoor": {
        "title": "Gate or Garage Door",
        "type": "object",
        "properties": {
          "zone": {
            "type": "number",
            "title": "Zone Number for Garage Door or Gate"
          },
          "PGM": {
            "type": "number",
            "title": "PGM Switch Number",
            "enum": [ 1, 2, 3, 4, 5, 6, 7, 8 ]
          },
          "doorDelay": {
            "type": "number",
            "title": "Garage Door Delay",
            "description": "Garage Door Delay in milliseconds",
            "default": 5000
          }
        }
      }
    }
  }
}
